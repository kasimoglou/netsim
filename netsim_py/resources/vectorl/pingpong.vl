
/*
	Simulation of a ping-pong game
*/

event PlayerA();
event PlayerB();

on PlayerA {
	print("A got the ball");
	emit PlayerB() after 1;
}

var int catch = 0;

on PlayerB {
	catch := catch +1;
	if(catch < 10) {
		print("B got the ball");
		emit PlayerB() after 1;		
	} else {
		print("B lost it");
	}
}

import sys;
on sys.Init {
	// B serves
	emit PlayerA() after 0;
}